#!/bin/bash

# Check if the CFILE variable is set
if [ -z "$CFILE" ]; then
  echo "Error: CFILE variable is not set."
  exit 1
fi

# Extract the base name of the C file (without the extension)
BASENAME=$(basename "$CFILE" .c)

# Generate the assembly code and save it in a file with the .s extension
gcc -S -masm=intel "$CFILE" -o "${BASENAME}.s"

# Check if the assembly generation was successful
if [ $? -eq 0 ]; then
  echo "Assembly code generated and saved to ${BASENAME}.s"
else
  echo "Error: Failed to generate assembly code."
  exit 1
fi
